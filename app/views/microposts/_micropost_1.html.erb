<!-- Blog Post -->
<div class="panel panel-default mb-4">
  <img class="panel-img-top" src="<%= micropost.image_url %>" alt="panel image cap">
  <%#= image_tag micropost.image_url, class: "panel-img-top" %>
  <div class="panel-body">
    <h2 class="panel-title"><%= micropost.title %></h2>
    <p class="panel-text"><%= micropost.content %></p>
<!--     <a href="show" target="_blank" class="btn btn-primary">Read More &rarr;</a> -->
    <%= link_to "Read More", micropost_path(micropost.id), target: "_blank", class: "btn btn-lg btn-primary" %>
  </div>
  <div class="panel-footer text-muted">
    <%= micropost.created_at %> by
    <a href="#">Start Bootstrap</a>
  </div>
</div>
